@using Microsoft.Extensions.Localization
@inject IStringLocalizer<delivery_website.Resources.SharedResources> Localizer
@model delivery_website.Models.ViewModels.Account.LoginViewModel

@{
    ViewData["Title"] = Localizer["Account.Login"];
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-sm">
                <div class="card-body p-5">
                    <div class="text-center mb-4">
                        <h2 class="fw-bold">🔐 @Localizer["Account.LoginTitle"]</h2>
                        <p class="text-muted">@Localizer["Account.LoginSubtitle"]</p>
                    </div>

                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <form asp-action="Login" method="post">
                        <div asp-validation-summary="All" class="text-danger mb-3"></div>

                        <input type="hidden" asp-for="ReturnUrl" />

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">@Localizer["Account.Email"]</label>
                            <input asp-for="Email" class="form-control form-control-lg" placeholder="@Localizer["Account.EmailPlaceholder"]" autofocus />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Password" class="form-label">@Localizer["Account.Password"]</label>
                            <input asp-for="Password" type="password" class="form-control form-control-lg" placeholder="@Localizer["Account.PasswordPlaceholder"]" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="mb-3 form-check">
                            <input asp-for="RememberMe" class="form-check-input" />
                            <label asp-for="RememberMe" class="form-check-label">
                                @Localizer["Account.RememberMe"]
                            </label>
                        </div>

                        <div class="d-grid mb-3">
                            <button type="submit" class="btn btn-primary btn-lg">
                                @Localizer["Account.LoginButton"]
                            </button>
                        </div>

                        <div class="text-center">
                            <a asp-action="ForgotPassword" class="text-decoration-none">
                                @Localizer["Account.ForgotPassword"]
                            </a>
                        </div>
                    </form>

                    <hr class="my-4">

                    <div class="text-center">
                        <p class="text-muted mb-0">
                            @Localizer["Account.NoAccount"]
                            <a asp-action="Register" class="text-decoration-none fw-bold">
                                @Localizer["Account.RegisterButton"]
                            </a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}