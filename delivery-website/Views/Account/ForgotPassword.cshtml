@model delivery_website.Models.ViewModels.Account.ForgotPasswordViewModel

@{
    ViewData["Title"] = SharedLocalizer["Account.ForgotPasswordTitle"];
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-sm">
                <div class="card-body p-5">
                    <div class="text-center mb-4">
                        <div class="mb-3" style="font-size: 3rem;">🔑</div>
                        <h2 class="fw-bold">@SharedLocalizer["Account.ForgotPasswordTitle"]</h2>
                        <p class="text-muted">@SharedLocalizer["Account.ForgotPasswordText"]</p>
                    </div>

                    <form asp-action="ForgotPassword" method="post">
                        <div asp-validation-summary="All" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">@SharedLocalizer["Account.Email"]</label>
                            <input asp-for="Email" class="form-control form-control-lg" placeholder="your@email.com" autofocus />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="d-grid mb-3">
                            <button type="submit" class="btn btn-primary btn-lg">
                                @SharedLocalizer["Account.SendLink"]
                            </button>
                        </div>

                        <div class="text-center">
                            <a asp-action="Login" class="text-decoration-none">
                                ← @SharedLocalizer["Account.BackToLogin"]
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}