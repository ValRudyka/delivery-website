@{
    ViewData["Title"] = "Пароль змінено";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-sm">
                <div class="card-body p-5">
                    <div class="text-center mb-4">
                        <div class="mb-3" style="font-size: 3rem;">✅</div>
                        <h2 class="fw-bold text-success">Пароль успішно змінено!</h2>
                        <p class="text-muted">
                            Ваш пароль було успішно скинуто. Тепер ви можете увійти до системи з новим паролем.
                        </p>
                    </div>

                    <div class="d-grid">
                        <a asp-action="Login" class="btn btn-primary btn-lg">
                            Перейти до входу
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>