@model delivery_website.Models.ViewModels.Account.RegisterViewModel

@{
    ViewData["Title"] = "Реєстрація";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm">
                <div class="card-body p-5">
                    <div class="text-center mb-4">
                        <h2 class="fw-bold">📝 Реєстрація</h2>
                        <p class="text-muted">Створіть ваш акаунт</p>
                    </div>

                    <form asp-action="Register" method="post">
                        <div asp-validation-summary="All" class="text-danger mb-3"></div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="FirstName" class="form-label">Ім'я *</label>
                                <input asp-for="FirstName" class="form-control" placeholder="Іван" />
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="LastName" class="form-label">Прізвище *</label>
                                <input asp-for="LastName" class="form-control" placeholder="Іванов" />
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">Email адреса *</label>
                            <input asp-for="Email" class="form-control" placeholder="your@email.com" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="PhoneNumber" class="form-label">Номер телефону *</label>
                            <input asp-for="PhoneNumber" class="form-control" placeholder="+380XXXXXXXXX" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Password" class="form-label">Пароль *</label>
                            <input asp-for="Password" type="password" class="form-control" placeholder="Мінімум 6 символів" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                            <small class="form-text text-muted">
                                Пароль повинен містити мінімум 6 символів
                            </small>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ConfirmPassword" class="form-label">Підтвердження паролю *</label>
                            <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Повторіть пароль" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                        <div class="mb-3 form-check">
                            <input asp-for="AgreeToTerms" class="form-check-input" />
                            <label asp-for="AgreeToTerms" class="form-check-label">
                                Я погоджуюсь з <a href="#" class="text-decoration-none">умовами використання</a> та <a href="#" class="text-decoration-none">політикою конфіденційності</a> *
                            </label>
                            <span asp-validation-for="AgreeToTerms" class="text-danger d-block"></span>
                        </div>

                        <div class="d-grid mb-3">
                            <button type="submit" class="btn btn-primary btn-lg">
                                Зареєструватися
                            </button>
                        </div>
                    </form>

                    <hr class="my-4">

                    <div class="text-center">
                        <p class="text-muted mb-0">
                            Вже маєте акаунт?
                            <a asp-action="Login" class="text-decoration-none fw-bold">
                                Увійти
                            </a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}