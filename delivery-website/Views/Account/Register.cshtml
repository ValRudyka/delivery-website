@using Microsoft.Extensions.Localization
@inject IStringLocalizer<delivery_website.Resources.SharedResources> Localizer
@model delivery_website.Models.ViewModels.Account.RegisterViewModel

@{
    ViewData["Title"] = Localizer["Account.Register"];
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm">
                <div class="card-body p-5">
                    <div class="text-center mb-4">
                        <h2 class="fw-bold">📝 @Localizer["Account.RegisterTitle"]</h2>
                        <p class="text-muted">@Localizer["Account.RegisterSubtitle"]</p>
                    </div>

                    <form asp-action="Register" method="post">
                        <div asp-validation-summary="All" class="text-danger mb-3"></div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="FirstName" class="form-label">@Localizer["Account.FirstName"] @Localizer["Account.RequiredField"]</label>
                                <input asp-for="FirstName" class="form-control" placeholder="@Localizer["Account.FirstNamePlaceholder"]" />
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="LastName" class="form-label">@Localizer["Account.LastName"] @Localizer["Account.RequiredField"]</label>
                                <input asp-for="LastName" class="form-control" placeholder="@Localizer["Account.LastNamePlaceholder"]" />
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">@Localizer["Account.Email"] @Localizer["Account.RequiredField"]</label>
                            <input asp-for="Email" class="form-control" placeholder="@Localizer["Account.EmailPlaceholder"]" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="PhoneNumber" class="form-label">@Localizer["Account.PhoneNumber"] @Localizer["Account.RequiredField"]</label>
                            <input asp-for="PhoneNumber" class="form-control" placeholder="@Localizer["Account.PhoneNumberPlaceholder"]" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Password" class="form-label">@Localizer["Account.Password"] @Localizer["Account.RequiredField"]</label>
                            <input asp-for="Password" type="password" class="form-control" placeholder="@Localizer["Account.PasswordMinLength"]" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                            <small class="form-text text-muted">
                                @Localizer["Account.PasswordHint"]
                            </small>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ConfirmPassword" class="form-label">@Localizer["Account.ConfirmPassword"] @Localizer["Account.RequiredField"]</label>
                            <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="@Localizer["Account.ConfirmPasswordPlaceholder"]" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                        <div class="mb-3 form-check">
                            <input asp-for="AgreeToTerms" class="form-check-input" />
                            <label asp-for="AgreeToTerms" class="form-check-label">
                                @Localizer["Account.AgreeToTermsPart1"] <a href="#" class="text-decoration-none">@Localizer["Account.TermsOfService"]</a> @Localizer["Account.And"] <a href="#" class="text-decoration-none">@Localizer["Account.PrivacyPolicy"]</a> @Localizer["Account.RequiredField"]
                            </label>
                            <span asp-validation-for="AgreeToTerms" class="text-danger d-block"></span>
                        </div>

                        <div class="d-grid mb-3">
                            <button type="submit" class="btn btn-primary btn-lg">
                                @Localizer["Account.RegisterButton"]
                            </button>
                        </div>
                    </form>

                    <hr class="my-4">

                    <div class="text-center">
                        <p class="text-muted mb-0">
                            @Localizer["Account.HaveAccount"]
                            <a asp-action="Login" class="text-decoration-none fw-bold">
                                @Localizer["Account.LoginButton"]
                            </a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}