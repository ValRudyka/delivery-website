@model delivery_website.Models.ViewModels.Account.ResetPasswordViewModel

@{
    ViewData["Title"] = "Скидання паролю";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-sm">
                <div class="card-body p-5">
                    <div class="text-center mb-4">
                        <div class="mb-3" style="font-size: 3rem;">🔐</div>
                        <h2 class="fw-bold">Скидання паролю</h2>
                        <p class="text-muted">Введіть новий пароль для вашого акаунту</p>
                    </div>

                    <form asp-action="ResetPassword" method="post">
                        <div asp-validation-summary="All" class="text-danger mb-3"></div>

                        <input asp-for="Email" type="hidden" />
                        <input asp-for="Code" type="hidden" />

                        <div class="mb-3">
                            <label asp-for="Password" class="form-label">Новий пароль</label>
                            <input asp-for="Password" type="password" class="form-control form-control-lg" placeholder="Введіть новий пароль" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                            <small class="form-text text-muted">
                                Пароль повинен містити мінімум 6 символів
                            </small>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ConfirmPassword" class="form-label">Підтвердження паролю</label>
                            <input asp-for="ConfirmPassword" type="password" class="form-control form-control-lg" placeholder="Повторіть новий пароль" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                        <div class="d-grid mb-3">
                            <button type="submit" class="btn btn-primary btn-lg">
                                Скинути пароль
                            </button>
                        </div>

                        <div class="text-center">
                            <a asp-action="Login" class="text-decoration-none">
                                ← Повернутися до входу
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}