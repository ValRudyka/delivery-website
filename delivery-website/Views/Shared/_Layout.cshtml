@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.Extensions.Localization
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
@inject IViewLocalizer Localizer
@inject IStringLocalizer<delivery_website.SharedResources> SharedLocalizer

<!DOCTYPE html>
<html lang="@System.Globalization.CultureInfo.CurrentUICulture.TwoLetterISOLanguageName">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - @SharedLocalizer["Common.FoodDeliveryPlatform"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom shadow-sm">
            <div class="container">
                <a class="navbar-brand fw-bold text-primary" asp-area="" asp-controller="Home" asp-action="Index">
                    üçï @SharedLocalizer["Common.FoodDelivery"]
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">@SharedLocalizer["Nav.Home"]</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Customer" asp-controller="Restaurants" asp-action="Index">@SharedLocalizer["Nav.Restaurants"]</a>
                        </li>

                        @if (SignInManager.IsSignedIn(User))
                        {
                            <li class="nav-item">
                                <a class="nav-link position-relative" asp-area="Customer" asp-controller="Cart" asp-action="Index">
                                    üõí @SharedLocalizer["Nav.Cart"]
                                    <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger"
                                          id="cartBadge" style="display: none; font-size: 0.7rem;">
                                        0
                                    </span>
                                </a>
                            </li>

                            @if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-danger fw-bold" asp-area="Admin" asp-controller="Dashboard" asp-action="Index">
                                        üõ°Ô∏è @SharedLocalizer["Nav.AdminPanel"]
                                    </a>
                                </li>
                            }

                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    üë§ @User.Identity!.Name
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <li><a class="dropdown-item text-danger fw-bold" asp-area="Admin" asp-controller="Dashboard" asp-action="Index">üõ°Ô∏è @SharedLocalizer["Nav.AdminPanel"]</a></li>
                                        <li><hr class="dropdown-divider"></li>
                                    }
                                    <li><a class="dropdown-item" asp-area="Customer" asp-controller="Profile" asp-action="Index">üë§ @SharedLocalizer["Nav.MyProfile"]</a></li>
                                    <li><a class="dropdown-item" asp-area="Customer" asp-controller="Address" asp-action="Index">üìç @SharedLocalizer["Nav.MyAddresses"]</a></li>
                                    <li><a class="dropdown-item" href="#">üìã @SharedLocalizer["Nav.MyOrders"]</a></li>
                                    <li><a class="dropdown-item" href="#">‚≠ê @SharedLocalizer["Nav.MyReviews"]</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="dropdown-item text-danger">
                                                üö™ @SharedLocalizer["Nav.Logout"]
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Login">@SharedLocalizer["Nav.Login"]</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link btn btn-primary text-white ms-2" asp-controller="Account" asp-action="Register">@SharedLocalizer["Nav.Register"]</a>
                            </li>
                        }

                        <!-- Language Switcher -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="languageDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                üåê @SharedLocalizer["Language.SelectLanguage"]
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="languageDropdown">
                                <li>
                                    <form asp-controller="Language" asp-action="SetLanguage" method="post" class="dropdown-item">
                                        <input type="hidden" name="culture" value="uk-UA" />
                                        <input type="hidden" name="returnUrl" value="@Context.Request.Path" />
                                        <button type="submit" class="btn btn-link text-decoration-none text-dark p-0">
                                            @SharedLocalizer["Language.Ukrainian"]
                                        </button>
                                    </form>
                                </li>
                                <li>
                                    <form asp-controller="Language" asp-action="SetLanguage" method="post" class="dropdown-item">
                                        <input type="hidden" name="culture" value="en-US" />
                                        <input type="hidden" name="returnUrl" value="@Context.Request.Path" />
                                        <button type="submit" class="btn btn-link text-decoration-none text-dark p-0">
                                            @SharedLocalizer["Language.English"]
                                        </button>
                                    </form>
                                </li>
                                <li>
                                    <form asp-controller="Language" asp-action="SetLanguage" method="post" class="dropdown-item">
                                        <input type="hidden" name="culture" value="de-DE" />
                                        <input type="hidden" name="returnUrl" value="@Context.Request.Path" />
                                        <button type="submit" class="btn btn-link text-decoration-none text-dark p-0">
                                            @SharedLocalizer["Language.German"]
                                        </button>
                                    </form>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="pb-4">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="container mt-3">
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="container mt-3">
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            </div>
        }

        @if (TempData["ResetLink"] != null)
        {
            <div class="container mt-3">
                <div class="alert alert-info alert-dismissible fade show" role="alert">
                    <strong>Development Mode:</strong> Password reset link: <a href="@TempData["ResetLink"]">@TempData["ResetLink"]</a>
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            </div>
        }

        @RenderBody()
    </main>

    <footer class="bg-light border-top mt-5 py-3">
        <div class="container text-center text-muted">
            <p>&copy; @SharedLocalizer["Common.Copyright"]</p>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @if (SignInManager.IsSignedIn(User))
    {
        <script>
            $(document).ready(function() {
                // Load cart count on page load
                loadCartCount();
            });

            function loadCartCount() {
                $.get('@Url.Action("GetItemCount", "Cart", new { area = "Customer" })', function(data) {
                    updateCartBadgeDisplay(data.count);
                });
            }

            function updateCartBadgeDisplay(count) {
                const badge = $('#cartBadge');
                if (count > 0) {
                    badge.text(count).show();
                } else {
                    badge.hide();
                }
            }

            // Global function for updating cart badge
            window.updateCartBadge = function(count) {
                updateCartBadgeDisplay(count);
            };
        </script>
    }

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
