    @if (SignInManager.IsSignedIn(User))
    {
        <script>
            $(document).ready(function() {
                // Load cart count on page load
                loadCartCount();
            });

            function loadCartCount() {
                $.get('@Url.Action("GetItemCount", "Cart", new { area = "Customer" })', function(data) {
                    updateCartBadgeDisplay(data.count);
                });
            }

            function updateCartBadgeDisplay(count) {
                const badge = $('#cartBadge');
                if (count > 0) {
                    badge.text(count).show();
                } else {
                    badge.hide();
                }
            }

            // Global function for updating cart badge
            window.updateCartBadge = function(count) {
                updateCartBadgeDisplay(count);
            };
        </script>
