@model PaginatedResult<AdminRestaurantListDto>
@{
    ViewData["Title"] = "Ресторани на модерації";
}

<div class="page-header d-flex justify-content-between align-items-center">
    <div>
        <h1 class="page-title">Ресторани на модерації</h1>
        <p class="text-muted">Ресторани, які очікують схвалення</p>
    </div>
    <div>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-1"></i>Всі ресторани
        </a>
        <span class="badge bg-warning fs-6 ms-2">@Model.TotalCount на модерації</span>
    </div>
</div>

@if (Model.Items.Any())
{
    <div class="row g-4">
        @foreach (var restaurant in Model.Items)
        {
            <div class="col-lg-6">
                <div class="card detail-card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <span class="fw-bold">@restaurant.Name</span>
                        <span class="badge bg-warning">На модерації</span>
                    </div>
                    <div class="card-body">
                        <div class="row mb-3">
                            <div class="col-6">
                                <small class="text-muted">Тип кухні</small>
                                <div>@restaurant.CuisineType</div>
                            </div>
                            <div class="col-6">
                                <small class="text-muted">Місто</small>
                                <div>@restaurant.City</div>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-6">
                                <small class="text-muted">Власник</small>
                                <div>@restaurant.OwnerEmail</div>
                            </div>
                            <div class="col-6">
                                <small class="text-muted">Дата реєстрації</small>
                                <div>@restaurant.CreatedDate.ToString("dd.MM.yyyy HH:mm")</div>
                            </div>
                        </div>

                        <div class="d-flex gap-2">
                            <a asp-action="Details" asp-route-id="@restaurant.RestaurantId" class="btn btn-outline-primary">
                                <i class="bi bi-eye me-1"></i>Деталі
                            </a>
                            <form asp-action="Approve" method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="restaurantId" value="@restaurant.RestaurantId" />
                                <input type="hidden" name="returnUrl" value="@Context.Request.Path" />
                                <button type="submit" class="btn btn-success">
                                    <i class="bi bi-check-lg me-1"></i>Схвалити
                                </button>
                            </form>
                            <form asp-action="Reject" method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="restaurantId" value="@restaurant.RestaurantId" />
                                <input type="hidden" name="returnUrl" value="@Context.Request.Path" />
                                <button type="submit" class="btn btn-danger">
                                    <i class="bi bi-x-lg me-1"></i>Відхилити
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="card detail-card">
        <div class="card-body text-center py-5">
            <i class="bi bi-check-circle fs-1 text-success d-block mb-3"></i>
            <h5>Немає ресторанів на модерації</h5>
            <p class="text-muted">Всі ресторани перевірені</p>
            <a asp-action="Index" class="btn btn-primary">
                <i class="bi bi-arrow-left me-1"></i>До списку ресторанів
            </a>
        </div>
    </div>
}
